#--------------------------------------------------------------------
# ENVIRONMENT SETTINGS
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP CONFIGURATION
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'

#--------------------------------------------------------------------
# DATABASE SETTINGS
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = your_database_name
database.default.username = your_database_user
database.default.password = your_database_password
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_general_ci
database.default.swapPre =
database.default.encrypt = false
database.default.compress = false
database.default.strictOn = false
database.default.failover = []
database.default.timestampFormat = 'Y-m-d H:i:s'

#--------------------------------------------------------------------
# EMAIL SETTINGS (Optional, for sending emails)
#--------------------------------------------------------------------

email.protocol = smtp
email.SMTPHost = smtp.gmail.com
email.SMTPUser = your-email@example.com
email.SMTPPass = your-email-password
email.SMTPPort = 587
email.SMTPKeepAlive = true
email.SMTPAuth = true
email.SMTPTimeout = 30
email.SMTPCrypto = tls
email.fromEmail = your-email@example.com
email.fromName = 'Your App Name'

#--------------------------------------------------------------------
# GOOGLE OAUTH CONFIGURATION
#--------------------------------------------------------------------

GOOGLE_CLIENT_ID = "your-google-client-id"
GOOGLE_CLIENT_SECRET = "your-google-client-secret"
GOOGLE_REDIRECT_URI = "http://localhost:8080/auth/callback"

#--------------------------------------------------------------------
# SESSION SETTINGS
#--------------------------------------------------------------------

sessionDriver = CodeIgniter\Session\Handlers\FileHandler
sessionSavePath = writable/session
sessionCookieName = ci_session
sessionExpiration = 7200
sessionMatchIP = false
sessionTimeToUpdate = 300
sessionRegenerateDestroy = false

#--------------------------------------------------------------------
# SECURITY & OTHER SETTINGS
#--------------------------------------------------------------------

cookiePrefix   =
cookieDomain   =
cookiePath     = "/"
cookieSecure   = false
cookieSameSite = "Lax"

CSRFProtection = true
CSRFTokenName  = csrf_test_name
CSRFCookieName = csrf_cookie_name
CSRFExpire     = 7200
CSRFRegenerate = true
CSRFRedirect   = false

XSSProtection = true
